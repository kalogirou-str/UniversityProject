@model DeclareCourseViewModel

@{
    ViewData["Title"] = "Declare";
}

<div class="container">
    <h2 class="text-center my-3">Declare</h2>
    <form asp-action="Declare">
        <div class="form-group row">
            <label for="SelectedCourseId" class="col-sm-2 col-form-label">Course:</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.SelectedCourseId, new SelectList(Model.Courses, "IdCourse", "CourseTitle"),  new { cssClass = "form-control" })
                @Html.ValidationMessageFor(m => m.SelectedCourseId, "", new { cssClass = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label for="SelectedStudentId" class="col-sm-2 col-form-label">Student:</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.SelectedStudentId, Model.Students, "Select a student", new { cssClass = "form-control" })
                @Html.ValidationMessageFor(m => m.SelectedStudentId, "", new { cssClass = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <input type="submit" value="Declare" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
