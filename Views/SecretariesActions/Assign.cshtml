@model AssignCourseViewModel

<h1>Assign Course</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-controller="SecretariesActions" asp-action="Assign" method="post">
            <div class="form-group">
                <label for="courseId" class="control-label">Select a course:</label>
                <select asp-for="CourseId" asp-items="Model.Courses" class="form-control"></select>
            </div>
            <div class="form-group">
                <label for="professorAFM" class="control-label">Select a professor:</label>
                <select asp-for="ProfessorAFM" asp-items="Model.Professors" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>